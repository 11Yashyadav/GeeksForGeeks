/*
class Node{
    int data;
    Node next;

    Node(int x){
        data = x;
        next = null;
    }
}
*/
class Solution {
    int carry=0;
    public Node addOne(Node head) {
     int carry  = helper(head,0);
        if(carry==1) {
           Node temp=new Node(carry);
             temp.next=head;
             return temp;
        }

        return head;
    }
    
    private int helper(Node head,int carry){
        if(head==null) return carry+=1;
       
     carry = helper(head.next,carry);
          int val=0;
          val  = head.data+carry;
          carry= val/10;
            head.data  = val%10;
         return carry;
    }
}
