class Solution {
    public int median(int[][] mat) {
        // code here
        ArrayList<Integer>p=new ArrayList<>();
        for(int i=0;i<mat.length;i++){
            for(int j=0;j<mat[0].length;j++){
                p.add(mat[i][j]);
            }
        }
        Collections.sort(p);
        int q=p.size();
        return p.get(q/2);
    }
}
